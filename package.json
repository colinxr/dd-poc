{
  "name": "rr-dd-poc",
  "private": true,
  "scripts": {
    "build": "react-router build",
    "build:worker": "TARGET=worker react-router build --config vite.worker.config.ts",
    "dev": "shopify app dev",
    "dev:wrangler": "npx wrangler dev --config wrangler.toml",
    "dev:worker": "vite --config vite.worker.config.ts",
    "deploy": "npm run build:worker && npx wrangler deploy",
    "deploy:prod": "npm run build:worker && npx wrangler deploy --env production",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy:shopify": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "react-router-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate && prisma migrate deploy",
    "setup:worker": "prisma generate",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite",
    "typecheck": "react-router typegen && tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest __tests__/unit",
    "test:integration": "vitest __tests__/integration",
    "test:coverage": "vitest --coverage",
    "db:migrate:local": "prisma migrate dev",
    "db:migrate:remote": "npx wrangler d1 execute rr-dd-poc-db --remote --file=./prisma/migrations/latest.sql",
    "db:push:local": "prisma db push",
    "db:create:remote": "npx wrangler d1 create rr-dd-poc-db --remote",
    "db:seed:local": "prisma db seed"
  },
  "type": "module",
  "engines": {
    "node": ">=18.20.0"
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.20.3",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@prisma/adapter-d1": "^6.16.3",
    "@prisma/client": "^6.16.3",
    "@react-router/cloudflare": "^7.12.0",
    "@react-router/dev": "^7.12.0",
    "@react-router/fs-routes": "^7.12.0",
    "@react-router/node": "^7.12.0",
    "@react-router/serve": "^7.12.0",
    "@shopify/app-bridge-react": "^4.2.4",
    "@shopify/shopify-app-react-router": "^1.1.0",
    "@shopify/shopify-app-session-storage-prisma": "^8.0.0",
    "bottlejs": "^2.0.1",
    "isbot": "^5.1.31",
    "prisma": "^6.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.12.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@shopify/api-codegen-preset": "^1.2.0",
    "@shopify/polaris-types": "^1.0.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.18.8",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "graphql-config": "^5.1.1",
    "happy-dom": "^20.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^6.3.6"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "overrides": {
    "p-map": "^4.0.0"
  },
  "author": "colin",
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
